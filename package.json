{
	"name": "root",
	"private": true,
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"bootstrap": "lerna bootstrap --use-workspaces",
		"link": "lerna link",
		"build": "lerna run build",
		"dev": "lerna run --parallel dev",
		"format": "prettier --write packages/**/*.{ts,js,json}",
		"prepare": "npm run bootstrap && npm run link && npm run build"
	},
	"devDependencies": {
		"lerna": "^3.20.2"
	},
	"dependencies": {
		"prettier": "^1.19.1"
	},
	"workspaces": [
		"packages/*"
	]
}
